{{#each this}}
<div class='country-card'>
<h1 class="country-name">{{name}}</h1>
<ul class='country-info'>
<li class='country-info-point'>Capital: {{capital}}</li>
<li class='country-info-point'>Population: {{population}}</li>
<li class='country-info-point'>Languages: 
    <ul class="country-languages">
        {{#each languages}}
        <li class="lng-item">{{this.name}}</li>
        {{/each}}</ul></li>
</ul>
<img class='country-flag' src='{{flag}}' alt='{{name}}'>
</div>

{{/each}}